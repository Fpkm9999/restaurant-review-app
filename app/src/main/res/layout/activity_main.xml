    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground_"
    android:orientation="vertical">

    <!-- SwipeRefreshLayout 추가 -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/bnv_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="?attr/actionBarSize">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Left Guideline -->
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.02" />

                <!-- Right Guideline -->
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_percent="0.98" />

                <!-- 서치바 START -->
                <androidx.coordinatorlayout.widget.CoordinatorLayout
                    android:id="@+id/search_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/colorBackground_"
                    app:layout_constraintEnd_toStartOf="@id/guideline_right"
                    app:layout_constraintStart_toEndOf="@id/guideline_left"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.appbar.AppBarLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/colorBackground_">

                        <com.google.android.material.search.SearchBar
                            android:id="@+id/main_search_bar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/colorSearch_"
                            android:hint="@string/main_search_bar_string" />
                    </com.google.android.material.appbar.AppBarLayout>

                    <com.google.android.material.search.SearchView
                        android:id="@+id/main_search_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/material_you_green"
                        android:hint="@string/main_search_view_string"
                        app:layout_anchor="@id/main_search_bar"
                        app:autoShowKeyboard="true" />
                </androidx.coordinatorlayout.widget.CoordinatorLayout>
                <!-- 서치바 END -->

                <!-- Carousel RecyclerView 추가 -->
                <!-- 배너 START -->
